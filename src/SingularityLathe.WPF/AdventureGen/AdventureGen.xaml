<UserControl x:Class="SingularityLathe.WPF.AdventureGen.AdventureGen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SingularityLathe.WPF.AdventureGen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:AdventureGenViewModel />
    </UserControl.DataContext>
    <Grid>
        <StackPanel>
            <Label Content="Label"/>
            <TextBox Text="{Binding AdventureTemplate}" />
            <TextBox Text="{Binding AdventureOutput}" />
        </StackPanel>
    </Grid>
</UserControl>
